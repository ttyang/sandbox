import testing ;

project boost-container-varray-test
    :
    requirements
        <include>.
        <include>..
        <include>../..
        <toolset>msvc:<asynch-exceptions>on
    ;

test-suite boost-container-varray
    : [ run varray_test.cpp ]
    ;

test-suite boost-container-varray_interprocess
    : [ run varray_interprocess_test.cpp /boost/thread//boost_thread
        :  # additional args
        :  # test-files
        :  # requirements
        <toolset>acc:<linkflags>-lrt
        <toolset>acc-pa_risc:<linkflags>-lrt
        <toolset>gcc-mingw:<linkflags>"-lole32 -loleaut32 -lpsapi -ladvapi32"
        <host-os>hpux,<toolset>gcc:<linkflags>"-Wl,+as,mpas"
    ] : <threading>multi
    ;
