import os ;
path-constant BOOST_ROOT : [ os.environ BOOST_ROOT ] ;

project 
    : requirements
        <warnings>all
        <toolset>intel:<warnings>on
        <toolset>gcc:<cxxflags>"-pedantic -Wall -Wstrict-aliasing -fstrict-aliasing -Wno-long-long"
        <toolset>msvc:<cxxflags>/W4
        <include>../..
        <include>.
	<include>$(BOOST_ROOT)
    :
	build-dir bin.v2
    ;

