import testing ;

project polygon-test
    :
    requirements
        <include>.
        <toolset>msvc:<asynch-exceptions>on
        <library>$(BOOST_ROOT)/libs/test/build//boost_unit_test_framework
    ;

alias "polygon-unit"
    :
        [ run gtl_boost_unit_test.cpp ]
    ;

alias "voronoi-benchmark"
    :
        [ run voronoi_benchmark_test.cpp ]
    ;

alias "voronoi-unit"
    :
        [ run voronoi_builder_test.cpp ]
        [ run voronoi_calc_utils_test.cpp ]
        [ run voronoi_clipping_test.cpp ]
        [ run voronoi_robust_fpt_test.cpp ]
        [ run voronoi_structures_test.cpp ]
    ;


